<UserControl x:Class="Presentation.UIHelpers.SubControls.LotDemonstrationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="130" Width="Auto">

    <UserControl.Resources>
        <!-- Кольори вибору та невибору -->
        <SolidColorBrush x:Key="ChosenColor" Color="LightBlue"/>
        <SolidColorBrush x:Key="StandartViewColor" Color="#FFF0F0F0"/>
    </UserControl.Resources>
    
    <!-- Загальний фон, рамка, заокруглення -->
    <Border x:Name="MainBorder"
            Background = "{StaticResource StandartViewColor}" 
            Padding="5" 
            CornerRadius="5" 
            BorderBrush="Gray" 
            BorderThickness="1" 
            MouseLeftButtonUp="UserControl_MouseLeftButtonUp">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Виділена зона зображення -->
            <Border Background="AliceBlue" Margin="5" CornerRadius="3">
                <Image x:Name="LotImage"
                       Width="90" Height="110"
                       Stretch="Uniform"/>
            </Border>

            <Grid Grid.Column="1" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Заголовок -->
                    <RowDefinition Height="*"/>
                    <!-- Опис, що тягнеться -->
                    <RowDefinition Height="Auto"/>
                    <!-- Найбільша ставка -->
                </Grid.RowDefinitions>

                <!-- Назва лоту + ім’я користувача -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Background="AliceBlue">
                    <TextBlock x:Name="LotNameTextBlock"
                               Text="Назва лоту"
                               FontSize="16"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    
                    <TextBlock x:Name="PosterNameTextBlock"
                               Text="Ім'я користувача"
                               FontSize="12"
                               VerticalAlignment="Center"
                               Foreground="Gray"/>
                </StackPanel>

                <!-- Опис -->
                <TextBlock Grid.Row="1" 
                           x:Name="DescriptionTextBlock"
                           Text="Опис лоту"
                           TextWrapping="Wrap"
                           Margin="0,5,0,0"
                           VerticalAlignment="Stretch"
                           Background="AliceBlue"/>

                <!-- Найбільша ставка -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Найбільша ставка: " FontWeight="SemiBold"/>
                    <TextBlock x:Name="BidAmountTextBlock" Text="1234 ₴" Foreground="DarkGreen"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
