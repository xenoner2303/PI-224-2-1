<Window x:Class="OnlineAuction.SecretCodeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Додати секретний код" 
        Height="400" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        FontSize="14">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0 0 0 5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0 0 0 15"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="32"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Додати секретний код" 
                   Grid.Row="0"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0 0 0 20"
                   HorizontalAlignment="Center"/>

        <!-- Тип коду -->
        <TextBlock Text="Тип коду:" Grid.Row="1"/>
        <ComboBox x:Name="cbType" Grid.Row="2" SelectedIndex="0">
            <ComboBoxItem Content="Менеджер"/>
            <ComboBoxItem Content="Адміністратор"/>
        </ComboBox>

        <!-- Кількість використань -->
        <TextBlock Text="Кількість використань:" Grid.Row="3"/>
        <ComboBox x:Name="cbUses" Grid.Row="4" SelectedIndex="0">
            <ComboBoxItem Content="1"/>
            <ComboBoxItem Content="2"/>
            <ComboBoxItem Content="3"/>
            <ComboBoxItem Content="5"/>
            <ComboBoxItem Content="10"/>
        </ComboBox>

        <TextBlock Text="Секретний код:" Grid.Row="5"/>
        <TextBox x:Name="InputSecretCodeBox" Height="30" Margin="0 0 0 10" Grid.Row="6" />
        
        <!-- Кнопки -->
        <StackPanel Grid.Row="7" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0 25 0 0">
            <Button Content="Скасувати" Click="Cancel_Click"/>
            <Button Content="Зберегти" Click="Save_Click"
                    Margin="10 0 0 0"
                    FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>