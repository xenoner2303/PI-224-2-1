<Window x:Class="UI.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="Менеджер" Height="800" Width="1400"
        Background="#f0f8ff" WindowState="Maximized">

    <Window.Resources>
        <Style TargetType="Button" x:Key="MenuButtonStyle">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="220"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#a9d96c"/>
            <Setter Property="BorderBrush" Value="#8bbf4c"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#c6f27e"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <DockPanel>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="Auto" MinHeight="251.12"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="78.8"/>
                <ColumnDefinition Width="221.2"/>
                <!-- Категорії -->
                <ColumnDefinition Width="132*"/>
                <ColumnDefinition Width="379*"/>
                <ColumnDefinition Width="549*"/>
                <!-- Контент вкладок -->
            </Grid.ColumnDefinitions>

            <Image x:Name="AuctionLotImage" Margin="27,1,29,10" Grid.Row="2" Grid.ColumnSpan="2"/>

            <!-- Верхній рядок -->
            <Grid Grid.ColumnSpan="5" VerticalAlignment="Center" Height="32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="127*"/>
                    <ColumnDefinition Width="43*"/>
                    <!-- Ліва частина: пошук -->
                    <!-- Права частина: ім'я та кнопка -->
                </Grid.ColumnDefinitions>

                <!-- Ліва частина: пошук -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="0" Margin="0,0,315,0" Height="32">
                    <TextBlock Text="Пошук:" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox Width="237" x:Name="SearchTextBox" Margin="0,0,10,0"/>
                    <Button Content="🔍" Click="SearchButton_Click" Cursor="Hand"/>
                </StackPanel>
                <!-- Права частина: ім'я користувача та кнопка Розлогінитись -->
                <StackPanel Orientation="Horizontal" Grid.Column="1" Height="30" Margin="76,1,4,1">
                    <!-- Ім'я користувача -->
                    <TextBlock x:Name="ManagerNameTextBlock" 
                               Foreground="Green" 
                               Text="Ім'я менеджера"                                
                               FontSize="14" 
                               VerticalAlignment="Center" 
                               Margin="0,0,15,0"/>

                    <!-- Кнопка Розлогінитись -->
                    <Button Content="Розлогінитись" 
                            Width="146" Height="30" 
                            Background="#f08080" 
                            Foreground="White" 
                            FontWeight="Bold" 
                            Click="LogoutButton_Click"
                            Cursor="Hand"/>
                </StackPanel>
            </Grid>

            <!-- Категорії зліва -->
            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,10,10,10" Grid.ColumnSpan="2">
                <TextBlock Text="Категорії" FontSize="16" Margin="0,0,0,10"/>
                <TreeView x:Name="CategoryTreeView"
                          PreviewMouseDown="CategoryTreeView_PreviewMouseDown"
                          SelectedItemChanged="CategoryTreeView_SelectedItemChanged"
                          Height="363">

                    <TreeView.Resources>
                        <!-- Стиль TreeViewItem з подією, що базується на системному стилі -->
                        <Style TargetType="{x:Type TreeViewItem}" BasedOn="{StaticResource {x:Type TreeViewItem}}">
                            <EventSetter Event="UIElement.PreviewMouseRightButtonDown"
                         Handler="TreeViewItem_PreviewMouseRightButtonDown"/>
                        </Style>
                    </TreeView.Resources>

                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Subcategories}">
                            <TextBlock Text="{Binding Name}" />
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>

                <!-- Дерево -->

                <!-- Панель додавання -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBox x:Name="NewCategoryTextBox" Width="200" Height="25" Margin="0,0,5,0"/>
                    <Button Content="Додати" Height="25" Click="AddCategoryButton_Click" Cursor="Hand"/>
                </StackPanel>
            </StackPanel>

            <!-- Вкладки справа -->
            <TabControl x:Name="MainTabControl" SelectionChanged="MainTabControl_SelectionChanged" Grid.Row="1" Grid.Column="2" Margin="0,10,0,10" Grid.ColumnSpan="3">
                <!-- Непідтверджені -->
                <TabItem Header="Непідтверджені лоти">
                    <DataGrid x:Name="PendingDataGrid" IsReadOnly = "True" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,0,0,10" SelectionChanged="LotsDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}"/>
                            <DataGridTextColumn Header="Назва" Binding="{Binding Title}"/>
                            <DataGridTextColumn Header="Категорія" Binding="{Binding Category.Name}"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding Status}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>

                <TabItem Header="Активні торги">
                    <DataGrid x:Name="ActiveLotsDataGrid" IsReadOnly = "True" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,0,0,10" SelectionChanged="LotsDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" />
                            <DataGridTextColumn Header="Назва" Binding="{Binding Title}" />
                            <DataGridTextColumn Header="Категорія" Binding="{Binding Category.Name}" />
                            <DataGridTextColumn Header="Ціна поточна" Binding="{Binding CurrentPrice}"/>
                            <DataGridTextColumn Header="Час завершення" Binding="{Binding EndTime}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>

                <TabItem Header="Закінчені торги">
                    <DataGrid x:Name="FinishedLotsDataGrid"  IsReadOnly = "True" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,0,0,10" SelectionChanged="LotsDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}"/>
                            <DataGridTextColumn Header="Назва" Binding="{Binding Title}"/>
                            <DataGridTextColumn Header="Категорія" Binding="{Binding Category.Name}"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding Status}"/>
                            <DataGridTextColumn Header="Переможець" Binding="{Binding WinnerLogin}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
                <!-- Відхилені лоти -->
                <TabItem Header="Відхилені лоти">
                    <DataGrid x:Name="RejectedLotsDataGrid" IsReadOnly = "True" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0 0 0 10" SelectionChanged="LotsDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}"/>
                            <DataGridTextColumn Header="Назва" Binding="{Binding Title}"/>
                            <DataGridTextColumn Header="Категорія" Binding="{Binding Category.Name}"/>
                            <DataGridTextColumn Header="Причина" Binding="{Binding RejectionReason}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
            </TabControl>

            <!-- Деталі лота знизу -->
            <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="1,3,1,0" Grid.Column="2" Grid.ColumnSpan="3">
                <StackPanel>

                    <!-- Заголовок і підтвердження на одному рівні -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Заголовок -->
                        <TextBlock Grid.Column="0"
               Text="Деталі лота"
               FontSize="18"
               FontWeight="Bold"
               Margin="0 0 0 10"
               VerticalAlignment="Center"/>

                        <!-- Панель підтвердження -->
                        <StackPanel x:Name="RejectionPanel"
                Grid.Column="1"
                Orientation="Vertical"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                                    Visibility="Visible">

                            <!-- Горизонтальний ряд з трьома кнопками -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5" Width="320" HorizontalAlignment="Right">
                                <Button x:Name="AcceptButton"
                    Content="Прийняти"
                    Width="100"
                    Height="30"
                    Margin="0,0,10,0"
                    Click="AcceptButton_Click"
                                        Visibility="Hidden"/>
                                <Button x:Name="RejectButton"
                    Content="Відхилити"
                    Width="100"
                    Height="30"
                    Margin="0,0,10,0"
                    Click="RejectButton_Click"
                                        Visibility="Hidden"/>
                                <Button x:Name="StopButton"
                    Content="Зупинити"
                    Width="100"
                    Height="30"
                    Click="StopButton_Click"
                    Visibility="Hidden"/>
                            </StackPanel>

                            <!-- TextBox і ConfirmButton в один ряд -->
                            <StackPanel Orientation="Horizontal">
                                <TextBox x:Name="DelitionReasonTextBox"
                     Width="220"
                     Height="30"
                     Margin="0,0,10,0"
                                         Visibility="Hidden"/>
                                <Button x:Name="ConfirmButton"
                    Content="Підтвердити"
                    Width="120"
                    Height="30"
                    Click="RejectionButton_Click"
                                        Visibility="Hidden"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <!-- Опис -->
                    <TextBlock Text="Опис:" FontWeight="Bold" Margin="10 0 0 0" Height="56"/>
                    <TextBlock Name="LotDescriptionTextBlock" TextWrapping="Wrap"/>

                    <!-- Інформація про користувача та переможця -->
                    <Grid Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Блок: Створювач -->
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Користувач, який створив лот" FontSize="16" FontWeight="Bold" Margin="0 0 0 5"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Ім’я: " FontWeight="Bold"/>
                                <TextBlock x:Name="UserFirstNameTextBlock"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Прізвище: " FontWeight="Bold"/>
                                <TextBlock x:Name="UserLastNameTextBlock"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Телефон: " FontWeight="Bold"/>
                                <TextBlock x:Name="UserPhoneNumberTextBlock"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Блок: Переможець -->
                        <StackPanel x:Name="WinnerInfoPanel" Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="Переможець торгів" FontSize="16" FontWeight="Bold" Margin="0 0 0 5"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Ім’я: " FontWeight="Bold"/>
                                <TextBlock x:Name="WinnerFirstNameTextBlock"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Прізвище: " FontWeight="Bold"/>
                                <TextBlock x:Name="WinnerLastNameTextBlock"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Телефон: " FontWeight="Bold"/>
                                <TextBlock x:Name="WinnerPhoneNumberTextBlock"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                </StackPanel>
            </Border>

        </Grid>
    </DockPanel>
</Window>