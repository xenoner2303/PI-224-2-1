<Window x:Class="UI.LotCreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Створення лоту" Height="350" Width="360" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Назва -->
            <RowDefinition Height="Auto"/>
            <!-- Опис -->
            <RowDefinition Height="Auto"/>
            <!-- Початкова ціна -->
            <RowDefinition Height="Auto"/>
            <!-- Час початку -->
            <RowDefinition Height="Auto"/>
            <!-- Час завершення -->
            <RowDefinition Height="Auto"/>
            <!-- Категорія -->
            <RowDefinition Height="Auto"/>
            <!-- Кнопки -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Назва -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Назва:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox Grid.Row="0" Grid.Column="1" Name="TitleTextBox" Margin="0,5"/>

        <!-- Опис -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Опис:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox Grid.Row="1" Grid.Column="1" Name="DescriptionTextBox" AcceptsReturn="True" TextWrapping="Wrap" Height="60" Margin="0,5"/>

        <!-- Початкова ціна -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Початкова ціна:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox Grid.Row="2" Grid.Column="1" Name="StartPriceTextBox" Margin="0,5"/>

        <!-- Час початку -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Початок:" VerticalAlignment="Center" Margin="0,5"/>
        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0,5" HorizontalAlignment="Left">
            <DatePicker Name="StartDatePicker" Width="130"/>
            <TextBox Name="StartTimeTextBox" Width="60" Margin="5,0,0,0" Text="12:00"/>
        </StackPanel>

        <!-- Час завершення -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Завершення:" VerticalAlignment="Center" Margin="0,5"/>
        <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Margin="0,5" HorizontalAlignment="Left">
            <DatePicker Name="EndDatePicker" Width="130"/>
            <TextBox Name="EndTimeTextBox" Width="60" Margin="5,0,0,0" Text="12:30"/>
        </StackPanel>

        <!-- Категорія -->
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Категорія:" VerticalAlignment="Center" Margin="0,5"/>
        <ComboBox Grid.Row="5" Grid.Column="1" Name="CategoryComboBox" Margin="0,5"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,17,0,0" Width="275" Grid.ColumnSpan="2">
            <Button Name="SaveButton" Width="94" Margin="5" Click="SaveButton_Click">Зберегти</Button>
            <Button Width="102" Margin="5" Click="CancelButton_Click">Відмінити</Button>
        </StackPanel>
    </Grid>
</Window>
