<Window x:Class="Presentation.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Presentation"
        mc:Ignorable="d"
        Title="Вікно авторизації" 
        Height="600" 
        Width="1000" 
        Background="#e6fcfc"
        WindowState="Maximized">
    <Grid Background="#9eba5d">
        <Border MinWidth="400" MaxWidth="800" MinHeight="400" Margin="15" Background="AliceBlue" VerticalAlignment="Center" Padding="40" CornerRadius="30">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightCyan" ShadowDepth="0" />
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock Text="Авторизація" FontSize="25" FontWeight="Bold" Margin="0 0 0 15" FontFamily="Comic Sans MS"/>

                    <!-- Поле логіну -->
                    <TextBox Name="LoginTextBox"
                             FontFamily="Comic Sans MS"
                             FontSize="15"
                             Margin="0 0 0 15"
                             materialDesign:HintAssist.Hint="Введіть логін"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                    <!-- Поле паролю -->
                    <PasswordBox Name="PasswordBox"
                             FontFamily="Comic Sans MS"
                             FontSize="15"
                             Margin="0 0 0 15"
                             materialDesign:HintAssist.Hint="Введіть пароль"
                             Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" />
                </StackPanel>


                <Grid Grid.Row="1" Margin="0 15 0 0">
                    <Button HorizontalAlignment="Left" MinWidth="100" Click="Authorization_Click" FontFamily="Comic Sans MS" Content="Вхід"/>

                    <StackPanel HorizontalAlignment="Right">
                        <TextBlock Text="Не маєш аккаунту? Зареєструйся!" FontFamily="Comic Sans MS" HorizontalAlignment="Center" FontStyle="Italic" Margin="0 0 0 5"/>
                        <Button Content="Зареєструватися" FontFamily="Comic Sans MS" Click="GoRegistration_Click" Background="LightCoral"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
