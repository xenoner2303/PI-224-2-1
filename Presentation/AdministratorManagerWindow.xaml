<Window x:Class="Presentation.AdministratorManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Панель адміністратора"
        Height="500"
        Width="700"
        Background="#e6fcfc" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow"
        WindowState="Maximized">
    <Grid Background="#9eba5d">
        <Border CornerRadius="12" Background="AliceBlue" BorderBrush="#ccc" BorderThickness="1" Padding="10" Margin="10">
            <Grid>
                <TabControl Margin="10"
                            BorderThickness="0"
                            Padding="10"
                            FontSize="12"
                            FontFamily="Comic Sans MS"
                            SelectedIndex="0">
                    <!-- Вкладка: Коди доступу -->
                    <TabItem Header="Коди реєстрації">
                        <Border Margin="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="3*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="10">
                                    <TextBlock Text="Секретний код реєстрації:" />
                                    <TextBox x:Name="NewSecretCodeTextBox" />

                                    <TextBlock Text="Тип аккаунту:" Margin="0,10,0,0"/>
                                    <ComboBox x:Name="AccountTypeComboBox"/>

                                    <TextBlock Text="Кількість використань:" Margin="0,10,0,0"/>
                                    <TextBox x:Name="CodeUsesTextBox" />

                                    <Button Content="Додати код" HorizontalAlignment="Center" Margin="0,20,0,0" Click="AddCode_Click"/>
                                </StackPanel>

                                <Grid Grid.Column="1" Margin="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="Присутні коди:" Grid.Row="0" Margin="0,0,0,5"/>
                                    <ListBox x:Name="CodesListBox" Background="White" Grid.Row="1"/>
                                    <Button Content="Видалити код" Margin="0,5,0,0" HorizontalAlignment="Center" Grid.Row="2" Click="RemoveCode_Click"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </TabItem>

                    <!-- Вкладка: Редагуввання користувачів -->
                    <TabItem Header="Редагування користувачів">
                        <Border Margin="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <!-- DataGrid займет всё доступное пространство -->
                                    <RowDefinition Height="Auto" />
                                    <!-- Кнопки будут внизу -->
                                </Grid.RowDefinitions>
                                <DataGrid x:Name="UsersDataGrid" AutoGenerateColumns="False" Margin="0,0,0,10" CanUserAddRows="False" Grid.Row="0">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Логін" Binding="{Binding Login}" IsReadOnly="True" />
                                        <DataGridTextColumn Header="Ім'я" Binding="{Binding FirstName}" />
                                        <DataGridTextColumn Header="Прізвище" Binding="{Binding LastName}" />
                                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" />
                                        <DataGridTextColumn Header="Телефон" Binding="{Binding PhoneNumber}" />
                                        <DataGridTextColumn Header="Вік" Binding="{Binding Age}" />
                                        <DataGridTextColumn Header="Пароль" Binding="{Binding Password}" />
                                        <DataGridComboBoxColumn Header="Роль" SelectedItemBinding="{Binding InterfaceType}" />
                                    </DataGrid.Columns>
                                </DataGrid>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Button Content="Видалити користувача" Grid.Column="0" HorizontalAlignment="Left" Click="RemoveUser_Click"/>
                                    <Button Content="Зберегти зміни" Grid.Column="1" HorizontalAlignment="Right" Click="UpgradeUsers_Click"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </TabItem>

                    <!-- Вкладка: Системні логи -->
                    <TabItem Header="Системні логи">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="10">
                                <TextBlock Text="Оберіть дату для перегляду логів:" />
                                <DatePicker x:Name="LogDatePicker" />

                                <Button Content="Показати логи" HorizontalAlignment="Center" Margin="0,10,0,0" Click="ShowLogs_Click"/>
                            </StackPanel>

                            <Grid Grid.Column="1" Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Логи:" Margin="0,0,0,0" Grid.Row="0"/>
                                <ListBox x:Name="LogListBox" Background="White" Grid.Row="1"/>
                            </Grid>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>
        </Border>
    </Grid>
</Window>