<Window x:Class="Presentation.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Менеджер" Height="800" Width="1400"
        Background="#f0f8ff" WindowState="Maximized">

    <Window.Resources>
        <!-- Стиль кнопок -->
        <Style TargetType="Button" x:Key="MenuButtonStyle">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="220"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#a9d96c"/>
            <Setter Property="BorderBrush" Value="#8bbf4c"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#c6f27e"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <DockPanel>
        <Border Width="250" Background="#d2fa75" DockPanel.Dock="Left" Padding="20">
            <StackPanel>
            <TextBlock Text="Меню менеджера" FontWeight="Bold" FontSize="20" Margin="0 0 0 20"/>
            <Button Content="Непідтверджені лоти" Style="{StaticResource MenuButtonStyle}" Click="UnconfirmedLots_Click"/>
            <Button Content="Активні торги" Style="{StaticResource MenuButtonStyle}" Click="ActiveAuctions_Click"/>
            <Button Content="Завершені торги" Style="{StaticResource MenuButtonStyle}" Click="FinishedAuctions_Click"/>
            <Button Content="Вийти" Style="{StaticResource MenuButtonStyle}" Background="Tomato" Click="Logout_Click" Margin="0 50 0 0"/>
        </StackPanel>
        </Border>

        <!-- Основний контент -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Пошук -->
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10" VerticalAlignment="Top">
                <TextBlock Text="Пошук:" FontSize="16" VerticalAlignment="Center" Margin="0 0 10 0"/>
                <TextBox Width="300" Name="SearchTextBox" Margin="0 0 10 0"/>
                <Button Content="🔍" Width="40" Click="SearchButton_Click"/>
            </StackPanel>

            <TabControl Grid.Row="1" Name="MainTabControl">
                <!-- Непідтверджені -->
                <TabItem Header="Непідтверджені лоти">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Дерево категорій -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Категорії" FontSize="16" Margin="0 0 0 10"/>
                            <TreeView Name="CategoryTreeView" SelectedItemChanged="CategoryTreeView_SelectedItemChanged"/>
                        </StackPanel>

                        <!-- Таблиця -->
                        <StackPanel Grid.Column="1" Margin="20 0 0 0">
                            <DataGrid Name="LotsDataGrid" AutoGenerateColumns="False" Height="400" CanUserAddRows="False" Margin="0 0 0 10" SelectionChanged="LotsDataGrid_SelectionChanged">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                                    <DataGridTextColumn Header="Назва" Binding="{Binding Title}" Width="200"/>
                                    <DataGridTextColumn Header="Категорія" Binding="{Binding CategoryName}" Width="150"/>
                                    <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="120"/>
                                    <DataGridTemplateColumn Header="Дії" Width="220">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Content="Підтвердити" Margin="2" Click="ConfirmLot_Click"/>
                                                    <Button Content="Почати торги" Margin="2" Click="StartAuction_Click"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- Деталі лота -->
                            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10">
                                <StackPanel>
                                    <TextBlock Text="Деталі лота" FontSize="18" FontWeight="Bold" Margin="0 0 0 10"/>
                                    <TextBlock Text="ID: " FontWeight="Bold"/>
                                    <TextBlock Name="LotIdTextBlock"/>
                                    <TextBlock Text="Опис:" FontWeight="Bold" Margin="10 0 0 0"/>
                                    <TextBlock Name="LotDescriptionTextBlock" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </TabItem>

                <!-- Активні торги -->
                <TabItem Header="Активні торги">
                    <TextBlock Text="Тут буде список активних торгів..." Margin="10"/>
                </TabItem>

                <!-- Завершені торги -->
                <TabItem Header="Завершені торги">
                    <TextBlock Text="Тут буде список завершених торгів..." Margin="10"/>
                </TabItem>
            </TabControl>
        </Grid>
    </DockPanel>
</Window>
